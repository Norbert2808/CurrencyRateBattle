@model X.PagedList.IPagedList<CRBClient.Models.RatingViewModel>
@using X.PagedList.Mvc.Core
@using System.Globalization

@{
    Layout = "~/Views/Shared/_BlackLayout.cshtml";
}

@using (Html.BeginForm())
{
    <div class="tableTitle">
        <h2>@ViewData["Title"]</h2>
    </div>
    <br/>
        <div id="tabs">

     <ul>
        <li><a href="#tab-1">Tab 1</a></li>
         <li><a href="#tab-2">Tab 2</a></li>

         </ul>
      </div>

         <div id="tab-1"> 
        <div  class="tableBody">
    <table style="background-color: rgba(145, 145, 145, 0.8);">
        <tr>
            <th style="width:20px; text-align:right">@Html.Label("Rank")</th>
            <th style="width:20px; text-align:right">@Html.Label("Email")</th>
            <th style="width:20px; text-align:right">@Html.Label("Last Bet Date")</th>
            <th style="width:20px; text-align:right">@Html.Label("Bets Number")</th>
        </tr>

   @for (int i = 0; i < Model.Count; i++)
   {
       <tr>
           <td style="text-align:right">111</td>
           <td style="text-align:right">@Model[i].Email</td>
           <td style="text-align:right">@Model[i].LastBetDate.ToLocalTime().ToString()</td>
           <td style="text-align:right">@Model[i].BetsNo</td>
       </tr>
   }
 </table>
 </div>
    <div id="container" style="margin-left: 20px">
        <p></p>
        <p></p>
        <div class="pagination">
            Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber)
            of @Model.PageCount   @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
        </div>
    </div>

       </div>
     <div id="tab-2">

             'content which you want to display on click of second tab'
             </div>


    
}

