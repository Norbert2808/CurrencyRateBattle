@model X.PagedList.IPagedList<CRBClient.Models.RoomViewModel>
@using X.PagedList.Mvc.Core
@using System.Globalization

@{
    Layout = "~/Views/Shared/_BlackLayout.cshtml";
}

<div class="main">
    <div class="filter">
        <h2>Filters</h2>
        <br/>
        <div class="valuta">
            <div class="firs_rov_valuta">

                @{
                    var currentFiler = ViewBag.CurrentFiler as string;
                }
                @(Html.ActionLink("USD", "CurrencyFilter", "Home", new {currentFilter = "USD"}))
                @(Html.ActionLink("EUR", "CurrencyFilter", "Home", new {currentFilter = "EUR"}))
                @(Html.ActionLink("PLN", "CurrencyFilter", "Home", new {currentFilter = "PLN"}))
            </div>
            <div class="second_rov_valuta">
                @(Html.ActionLink("CHF", "CurrencyFilter", "Home", new {currentFilter = "CHF"}))
                @(Html.ActionLink("GBP", "CurrencyFilter", "Home", new {currentFilter = "GBP"}))
            </div>
        </div>
    </div>
    <div class="rooms">
        @foreach (var room in Model)
        {
            <div class="content_room">
                <div class="info_room">
                    <p>
                        @Html.Label(room.СurrencyName + " ("
                                    + room.CurrencyExchangeRate
                                    + " "
                                    + room.UpdateRateTime.ToString("MMMM-dd HH:mm", CultureInfo.InvariantCulture) +
                                    ")")
                    </p>
                </div>
                <div class="info_time">
                    <p>@Html.Label(room.Date.ToString("MM/dd/yyyy HH:mm", CultureInfo.InvariantCulture))</p>
                </div>
                <div class="info_valut">
                    <button class="stavka">
                        <p>stavka</p>
                    </button>
                </div>
            </div>
        }
    </div>
</div>
<div class="pagination-class">
    <p>@Html.PagedListPager(Model, page => Url.Action("Main"))</p>
</div>