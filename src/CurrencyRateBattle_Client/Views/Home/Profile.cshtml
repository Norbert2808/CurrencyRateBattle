@model CRBClient.Models.AccountInfoViewModel
@{
    Layout = null;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css"/>
    <link rel="stylesheet" href="~/css/profilePageStyle.css">
    <title>Profile Card</title>
</head>
<body>
<div class="header">
    <div class="logo">
        <a href="/Home/Main"><img src="~/css/img/logo_Rate.jpg" alt=""/></a>
    </div>
</div>
<div class="container">
<div class="card">
    <div class="card-header">
        <img src="~/img/profile-image.png" alt="Profile Image" class="profile-img">
    </div>
    <div class="card-body">
        <a class="mail">@Html.DisplayFor(model => model.Email)</a>
        <p class="balance">@Html.DisplayFor(model => model.Amount) UAH</p>
    </div>

    <div class="social-links">
        <a href="https://t.me/+e1_dOqBNiUdhOWE6" class="fab fa-telegram social-icon"></a>
        <a href="https://git.java-academy.xyz/Oleksandr_Panchenko/currency-rate-battle" class="fab fa-gitlab social-icon"></a>
    </div>

    <div class="card-footer">
        <p class="company-name"><a href="/Home/Main"><span>Currency Rate Battle</span></a></p>
    </div>
</div>
</div>
</body>
</html>

